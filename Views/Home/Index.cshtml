@{
    ViewData["Title"] = "Home Page";
}
@model BookListsViewModel


@foreach (var x in Model.Books)
{
    <div class="text-center card card-outline-primary m-1 p-1">
        <h3>Title: @x.Title</h3>
        <p>Author: @x.Author</p>
        <p>Publisher: @x.Publisher</p>
        <p>ISBN: @x.ISBN</p>
        <p>Category: @x.Category</p>
        <p>Price: @x.Price</p>
    </div>
}

<div page-model="@Model.PagingInfo" page-action="Index" 
     page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group pull-right m-1">
</div>